extends ../layout/index

block contenido
    div.py-10
        h1.text-center.font-extrabold.my-10.text-4xl.text-vino Bienes 
            span.font-normal.text-negro Raíces
        h2.text-center.font-extrabold.text-2xl= page

        if errors
            div(class="max-w-md mx-auto my-10")
                each error in errors
                    div(class="bg-vino text-blanco p-4 rounded-md flex items-center justify-between mb-2")
                        if error.msg == "La contraseña es un campo obligatorio"
                            i(class="fas fa-key mr-2")  
                        else if error.msg == "El Password debe ser de al menos 8 caracteres"
                            i(class="fas fa-lock mr-2") 
                        p(class="text-sm font-bold")= error.msg
                        button(class="ml-2 bg-transparent border-0 text-blanco" onclick="this.parentElement.style.display='none'") &times;
                        
        .mt-8.mx-auto.max-w-md
            .bg-blanco.py-8.px-4.shadow
                form(method="POST"  ).space-y-5.px-6
                    input(type="hidden" name="_csrf" value= csrfToken)
                    div
                        label.block.text-sm.uppercase.text-negro.mb-2.font-bold Ingresa tu Nueva Contraseña: 
                        input#password.w-full.px-3.py-2.border-2.border-negro.rounded-md(type="password" placeholder="Minimo de 8 caracteres" name="new_password")
                    div
                        label.block.text-sm.uppercase.text-negro.mb-2.font-bold Confirmar tu Nueva Contraseña: 
                        input#password2.w-full.px-3.py-2.border-2.border-negro.rounded-md(type="password" placeholder="Que sea igual a la anterior " name="new_password2")
                    input(class="w-full bg-naranja hover:bg-vino text-blanco font-bold py-3 cursor-pointer" type="submit" value="Actualizar Contraseña")
    script.
        document.querySelectorAll('.bg-vino').forEach(error => {
            setTimeout(() => {
                error.style.display = 'none';
            }, 7000); 
        });
