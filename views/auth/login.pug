extends ../layout/index

block contenido
    div 
        .py-10
        h1.text-center.text-4xl.my-10.font-extrabold.text-white Bienes
            span.font-normal.text-vino Raíces
        h2.text-center.font-extrabold.text-2xl.text-black= page

        .mt-8.mx-auto.max-w-md
            .bg-white.py-8.px-4.shadow
                form(action="").space-y-5.px-6
                    div
                        label.block.text-sm.uppercase.text-gray-600.mb-2.font-bold Correo Electrónico:
                        input#email.w-full.px-3.py-2.border.border-gray-300.rounded-xl.placeholder-gray-400(type="email" placeholder="ej: usuario@dominio.com" name="correo_usuario")
                    div
                        label.block.text-sm.uppercase.text-gray-600.mb-2.font-bold Contraseña:
                        input#password.w-full.px-3.py-2.border.border-gray-300.rounded-xl.placeholder-gray-400(type="password" placeholder="mínimo de 8 carácteres" name="pass_usuario")
                    
                    .flex.items-center.justify-between 
                        a.text-gray-500.text-xs(href="/auth/register" class="hover:underline hover:decoration-2 hover:decoration-naranja") ¿Aún no tienes cuenta?, registrate
                        a.text-gray-500.text-xs(href="/auth/passwordRecovery" class="hover:underline decoration-2 hover:decoration-naranja") Olvidé mi contraseña...
                    div 
                        input(class="w-full bg-vino hover:bg-gris text-white font-bold py-3 cursor-pointer" type="submit" value="Ingresar")
